@page "{id:int}"
@model ASP_NET_04._Razor_Pages_Product_site.Pages.ProductModel

<div class="container mt-4">

    @if (Model.Product is not null)
    {
        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="card shadow">
                    <div class="card-body">

                        <h3 class="card-title mb-3">
                            @Model.Product.Name
                        </h3>

                        <p class="text-muted">
                            @Model.Product.Description
                        </p>

                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item">
                                <strong>Price:</strong> @Math.Round(@Model.Product.Price, 2) ₼
                            </li>
                            <li class="list-group-item">
                                <strong>Count:</strong> @Model.Product.Count
                            </li>
                            <li class="list-group-item">
                                <strong>Available:</strong>
                                @if (Model.Product.IsAvailable)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">No</span>
                                }
                            </li>
                        </ul>

                        <a asp-page="/Products" class="btn btn-outline-secondary">
                            ← Back to Products
                        </a>

                    </div>
                </div>

            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            No Data
        </div>
    }

</div>
